        <style>
            body{
                background-color: gray;
            }
            .container{
                position: relative;
                top: 80px;
                height:500px;
                width:500px;
                background-color:whitesmoke;
                border-radius: 15px;
                margin-bottom: 50px;
            }
            .form-control{
                top:30px;
            }
            
            #mt{
                position: relative;
                top : 50px;
                bottom: 50px;
            }
            #_id{
                position: relative;
                align-content: center;
                left: 570px;
                top: 60px;
                font-size: 120%;
            }
            
        </style>
    </head>
    <body>
        <p id="_id">Edit Details for id = <%= id %></p>
        <div class="container">
            <p style="padding-top : 20px;">Name</p>
            <form id="myForm" action="/edit.ejs/<%= id %>" method="POST">
                <div class="row">
                    <div class="col">
                     <input type="text" class="form-control" placeholder="First name" id="firstname" name="firstname">
                    </div>
                    </br>
                    <div class="col">
                     <input type="text" class="form-control" placeholder="Last name" id="lastname" name="lastname">
                    </div>
                </div>

                <div class="form-group"style="padding-top : 20px;">
                    <label for="exampleFormControlInput1">Email address</label>
                    <input type="email" name="email" id="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                </div>

                <label for="birthday" style="padding-top : 20px;">Date Of Birth : </label>
                <input type="date" id="birthday" name="dob" style="border-radius: 5px;">

                <div class="form-group" style="padding-top : 20px;">
                    <label for="exampleFormControlTextarea1">Example textarea</label>
                    <textarea name="bio" style="padding-top:15px;" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Write about you something..."></textarea>
                    <button id="submit"  class="btn btn-primary mb-3">Submit</button>
                </div>
            </form>        
        </div>   
        <script type="text/javascript" src="/views/view.js"></script>
        <script src="https://unpkg.com/bootstrap-table@1.18.2/dist/bootstrap-table.min.js"></script>
    </body>

